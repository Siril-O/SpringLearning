<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<bean name="pizzaRepository" class="ua.epam.edu.pizza.repository.TestPizzaRepository"
		init-method="init" />
	<bean name="orderRepository" id="orderRepository"
		class="ua.epam.edu.pizza.repository.TestOrderRepository"></bean>
	<bean name="orderService" id="orderService"
		class="ua.epam.edu.pizza.service.SimpleOrderService">
		<constructor-arg ref="pizzaRepository" />
		<constructor-arg ref="orderRepository" />
	</bean>

</beans>
